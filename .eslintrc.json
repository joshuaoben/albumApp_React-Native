{

	"extends":[
	],
	"plugins": [
		"flowtype",
		"prettier"
	],

	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true,
		"jest": true
	},
	"rules": {
		"jsx-a11y/anchor-is-valid": [
			"error",
			{
				"components": ["Link"],
				"specialLink": ["hrefLeft", "hrefRight", "to"],
				"aspects": ["noHref", "invalidHref", "preferbutton"]
			}
		]
	}
}